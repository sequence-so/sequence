{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "../dist",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es2018"],
    "types": ["node"],
    "checkJs": false,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "rootDir": ".",
    "composite": true,
    "strict": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "filters": ["./filters"],
      "filters/*": ["./filters/*"],
      "campaign": ["./campaign"],
      "campaign/*": ["./campaign/*"]
    },
    "plugins": [{ "transform": "transformer-module" }]
  },
  "include": ["./filters", "./campaign", "./node_modules/@types"],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts"
  ]
}
